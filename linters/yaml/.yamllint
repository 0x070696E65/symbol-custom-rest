extends: default

rules:
  document-start:
    present: false
    level: error

  document-end:
    present: false
    level: error

  empty-lines:
    max: 1
    max-start: 0
    max-end: 0

  line-length:
    max: 140

  quoted-strings:
    required: only-when-needed

  comments: enable
  comments-indentation: enable
  empty-values: enable
  octal-values: enable
  truthy: enable
